modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_database:1.0.0"]

[workflows]
runButton = "TourGuide App"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "TourGuide Frontend"

[[workflows.workflow]]
name = "TourGuide Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:web"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "TourGuide Full Stack"
author = 44106532
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:web"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev:server"

[[workflows.workflow]]
name = "TourGuide Frontend Dev"
author = 44106532
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && npm run dev -- --port 5000 --hostname 0.0.0.0"

[[workflows.workflow]]
name = "TourGuide App"
author = 44106532
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/web && npm run dev -- --port 5000 --hostname 0.0.0.0"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]
